<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<style>
  body{background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQXHd3M6LzUNxGKFalIQ6ZPb8Tf0lmN-UqGFQ&usqp=CAU");}
  table{
    text-align: center;
    background-color: white;
    color: white;
    border-collapse: collapse;
    width: 100%;

  }
  th,td{
    text-align: center;
    padding: 8px;
    border-bottom: 1px solid #ddd;
  }
  h2{
    background-color: white;
    text-align: white;
  }
</style>
<body>

<div class="container mt-3">
  <h2  style="text-align:center">Product Details</h2>
             
  <table class="table table-striped">
    <thead>
      <tr>
        <th>productId</th>
        <th>productName</th>
        <th>categoryName</th>
        <th>categoryId</th>
        
      </tr>
    </thead>
    <tbody>
      <%user.forEach(function(user){ %>
        <tr>
            <td><%=user.productId %></td>
            <td><%=user.productName %></td>
            <td><%=user.categoryName%></td>
            <td><%=user.categoryId %></td>
          <td>
            <a href="edit/<%= user.productId%>"><button class="fa fa-edit" style="font-size:23px" ></button></a>
            <a href="delete/<%= user.productId %>"><button class="fa fa-trash-o" style="font-size:23px" ></button></a>
          </td>
          </tr>
   <%  }); %>
   <br>
   <button style="color: #ccc; height: 48px; width: 80px; background-color: #e05260;" >
    <a href="/add">
       <i style="color:white;"></i>
       <span class="link_name" style="color:white">Add</span>
    </a>
  </button>
</tbody>
  </table>
</div>
</body>
</html>
